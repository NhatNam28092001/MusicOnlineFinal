@model IEnumerable<OnlineMusic.EF.SANPHAM>

@{
    ViewBag.Title = "Danhsach";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div>
    <button class="btn btn-light" type="button">
        @Html.ActionLink("Thêm mới Sản phẩm", "Index")
    </button>

</div>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách sản phẩm</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Code</th>
                        <th>MetaTitle</th>
                        <th>Image</th>
                        <th>Description</th>
                        <th>MoreImage</th>
                        <th>Price</th>
                        <th>PromotionPrice</th>
                        <th>Details</th>
                        <th>Quantity</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.ID</td>
                        <td>@item.Name</td>
                        <td>@item.Code</td>
                        <td>@item.MetaTitle</td>
                        <td><img src="@item.Image" style="width: 350px; height:auto" /></td>
                        <td>@item.Description</td>
                        <td><img src="@item.MoreImage" style="width: 350px; height:auto" /></td>
                        <td>@item.Price</td>
                        <td>@item.PromotionPrice</td>
                        <td>@item.Details</td>
                        <td>@item.Quantity</td>
                        <td>@item.Status</td>
                        <td>
                            <a href="/Admin/Product/Sua?meta=@item.MetaTitle">Sửa</a>
                            <a href="/Admin/Product/Xoa?meta=@item.MetaTitle"> Xóa</a>
                        </td>
                    </tr>
}

                </tbody>
            </table>
            @*@Html.PagedListPager(Model, Page => Url.Action("Danhsach", new { Page }));*@
        </div>
    </div>
</div>



