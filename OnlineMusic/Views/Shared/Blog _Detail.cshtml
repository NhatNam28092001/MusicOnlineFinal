@model List<OnlineMusic.EF.NEWS>


@foreach(var item in Model)
{
<div class="p-b-63">
    <a href="/Main/Blog_Detail?meta=@item.MetaTitle" class="hov-img0 how-pos5-parent">
        <img src="@item.Image" alt="IMG-BLOG">

        <div class="flex-col-c-m size-123 bg9 how-pos5">
            <span class="ltext-107 cl2 txt-center">
                18
            </span>

            <span class="stext-109 cl3 txt-center">
                Dec 2021
            </span>
        </div>
    </a>

    <div class="p-t-32">
        <h4 class="p-b-15">
            <a href="/Main/Blog_Detail?meta=@item.MetaTitle" class="ltext-108 cl2 hov-cl1 trans-04">
                @item.Name
            </a>
        </h4>

        <p class="stext-117 cl6">
            @item.Description
        </p>

        <div class="flex-w flex-sb-m p-t-18">
            <span class="flex-w flex-m stext-111 cl2 p-r-30 m-tb-10">
                <span>
                    <span class="cl4">By</span> Admin Times Records
                    <span class="cl12 m-l-4 m-r-6">|</span>
                </span>
                <span>
                    8 Comments
                </span>
            </span>

            @Html.ActionLink("Continue Reading", "Blog_Detail", "Main", null, new { @class = "stext-101 cl2 hov-cl1 trans-04 m-tb-10" })
        </div>
    </div>
</div>
}
